<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/black">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/setWorkTitleTextView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Set Workout Duration (secs)"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="37dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/editTextWorkDuration"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="180"
            android:background="@color/white" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/setRestTitleTextView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Set Rest Duration (secs)"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="37dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/editTextRestDuration"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="60"
            android:background="@color/white"/>

    </TableRow>


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/setRoundsTitleTextView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Set How Many Rounds"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="37dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/editTextRounds"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="2"
            android:background="@color/white"/>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="Start"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/buttonStop"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="Stop" />

    </TableRow>

    <TextView
        android:id="@+id/timeRemainTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="Time Remaining:"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/countDownTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="00:00"
        android:textSize="24sp"
        android:textColor="@color/white"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:progressBackgroundTint="#FFFFFF"
        android:progressBackgroundTintMode="src_in"
        android:scaleY="4" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        tools:srcCompat="@drawable/runicon" />

    <TextView
        android:id="@+id/activityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@color/white"/>


</LinearLayout>